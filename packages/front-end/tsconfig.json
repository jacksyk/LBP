{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "out-tsc",
    "rootDir": "./",
    "allowJs": true,
    "noImplicitAny": false
  },
  "include": ["./src/**/*.ts"]
}
